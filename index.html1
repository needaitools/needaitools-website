        // Search functionality
        function setupSearch() {
            const searchInput = document.getElementById('searchInput');
            searchInput.addEventListener('input', (e) => {
                const query = e.target.value.toLowerCase();
                if (query.length > 2) {
                    const results = featuredTools.filter(tool => 
                        tool.name.toLowerCase().includes(query) ||
                        tool.description.toLowerCase().includes(query) ||
                        tool.category.toLowerCase().includes(query) ||
                        tool.features.some(feature => feature.toLowerCase().includes(query))
                    );
                    
                    if (results.length > 0) {
                        console.log(`Found ${results.length} tools matching "${query}"`);
                        // In a full implementation, this would filter the displayed tools
                    }
                }
            });
